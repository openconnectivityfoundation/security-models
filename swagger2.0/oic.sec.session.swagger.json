          {"$ref": "#/parameters/interface"},
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Account-Session-Request" },
            "x-example":
              {
                "uid" : "123e4567-e89b-12d3-a456-d6e313b71d9f",
