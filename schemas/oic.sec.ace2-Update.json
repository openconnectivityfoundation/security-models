{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://openconnectivityfoundation.github.io/ocf-apis/security/schemas/oic.sec.ace2-Update.json#",
  "title": "Subject-based Access Control Entry (ACE) object definition",
  "definitions": {
    "oic.sec.ace2": {
      "type": "object",
      "properties": {
        "aceid": {
          "type": "integer",
          "minimum": 1,
          "description": "An identifier for the ACE that is unique within the ACL. In cases where it isn't supplied in an update, the Server will add the ACE and assign it a unique value."
        },
        "resources": {
          "type": "array",
          "description": "References the application's resources to which a security policy applies",
          "items": {
            "type": "object",
            "description": "Each resource must have at least one of these properties set",
            "properties": {
              "href": {
                "allOf": [
                  {
                    "description": "When present, the ACE only applies when the href matches"
                  },
                  {
                    "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/core/schemas/oic.oic-link-schema.json#/definitions/oic.oic-link/properties/href"
                  }
                ]
              },
              "rt": {
                "allOf": [
                  {
                    "description": "When present, the ACE only applies when the rt (resource type) matches"
                  },
                  {
                    "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/core/schemas/oic.oic-link-schema.json#/definitions/oic.oic-link/properties/rt"
                  }
                ]
              },
              "if": {
                "allOf": [
                  {
                    "description": "When present, the ACE only applies when the if (interface) matches"
                  },
                  {
                    "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/core/schemas/oic.oic-link-schema.json#/definitions/oic.oic-link/properties/if"
                  }
                ]
              },
              "wc": {
                "type": "string",
                "enum": [ "+", "-", "*" ],
                "description": "A wildcard matching policy",
                "detail-desc": [  "+ - Matches all discoverable resources",
                                  "- - Matches all non-discoverable resources",
                                  "* - Matches all resources"
                ]
              }
            }
          }
        },
        "permission": {
          "allOf": [
            {
              "type": "integer",
              "description": "Bitmask encoding of CRUDN permission"
            },
            {
              "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/security/schemas/oic.sec.crudntype.json#/definitions/oic.sec.crudntype/properties/bitmask"
            }
          ]
        },
        "subject": {
          "anyOf": [
            {
              "description": "The subject to whom this ace applies, either a deviceId, role, or wildcard",
              "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/security/schemas/oic.sec.didtype.json#/definitions/oic.sec.didtype"
            },
            {
              "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/security/schemas/oic.sec.roletype.json#/definitions/oic.sec.roletype"
            },
            {
              "type": "object",
              "properties": {
                "conntype": {
                  "type": "string",
                  "enum": [ "auth-crypt", "anon-clear" ],
                  "description": "This property allows an ACE to be matched based on the connection or message type",
                  "detail-desc": [  "auth-crypt - ACE applies if the Client is authenticated and the data channel or message is encrypted and integrity protected",
                                    "anon-clear - ACE applies if the Client is not authenticated and the data channel or message is not encrypted but may be integrity protected"
                  ]
                }
              },
              "required": ["conntype"]
            }
          ]
        },
        "validity": {
          "type": "array",
          "description": "validity is an array of time-pattern objects",
          "items": {
            "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/security/schemas/oic.sec.time-pattern.json#/definitions/time-pattern"
          }
        }
      },
      "required": [ "resources", "permission", "subject" ]
    }
  }
}
