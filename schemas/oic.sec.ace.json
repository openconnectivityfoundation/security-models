{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://openconnectivityfoundation.github.io/ocf-apis/security/schemas/oic.sec.ace.json#",
  "title": "Subject based Access Control Entry (ACE) object definition",
  "definitions": {
    "oic.sec.ace": {
      "type": "object",
      "properties": {
        "resources": {
          "type": "array",
          "description": "References the application's resources to which a security policy applies",
          "items": { "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/core/schemas/oic.oic-link-schema.json#/definitions/oic.oic-link" }
        },
        "permission": {
          "allOf": [
            {
              "type": "integer",
              "description": "Bitmask encoding of CRUDN permission"
            },
            {
              "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/security/schemas/oic.sec.crudntype.json#/definitions/oic.sec.crudntype/properties/bitmask"
            }
          ]
        },
        "validity": {
          "type": "array",
          "description": "validity is an array of time-pattern objects",
          "items": {
            "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/security/schemas/oic.sec.time-pattern.json#/definitions/time-pattern"
          }
        },
        "subjectuuid": {
          "anyOf": [
            {
              "description": "The id of the device to which the ace applies to or \"*\" for anonymous access",
              "type": "string", "pattern": "^\\*$"
            },
            {
              "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/core/schemas/oic.types-schema.json#/definitions/uuid"
            }
          ]
        }
      },
      "required": [ "resources", "permission", "subjectuuid" ]
    }
  }
}
