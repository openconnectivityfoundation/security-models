{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://openconnectivityfoundation.github.io/ocf-apis/security/schemas/oic.r.doxm.json#",
  "title": "Device Owner Transfer Method information",
  "definitions": {
    "oic.r.doxm": {
      "type": "object",
      "properties": {
        "oxms":  {
          "type": "array",
          "readOnly": true,
          "description": "List of supported owner transfer methods",
          "items": {
            "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/security/schemas/oic.sec.doxmtype.json#/definitions/oic.sec.doxmtype/properties/oxm"
          }
        },
        "oxmsel":   {
          "allOf": [
            { "description": "The selected owner transfer method used during on-boarding" },
            {  "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/security/schemas/oic.sec.doxmtype.json#/definitions/oic.sec.doxmtype/properties/oxm" }
          ]
        },
        "sct": {
          "allOf": [
            {
              "readOnly": true,
              "description": "Bitmask encoding of supported credential types"
            },
            {
              "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/security/schemas/oic.sec.credtype.json#/definitions/oic.sec.credtype/properties/bitmask"
            }
          ]
        },
        "owned":   {
          "type": "boolean",
          "description": "Ownership status flag"
        },
        "deviceuuid": {
          "allOf": [
            {
              "description": "The uuid formatted identity of the device"
            },
            {
              "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/core/schemas/oic.types-schema.json#/definitions/uuid"
            }
          ]
        },
        "devowneruuid": {
          "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/core/schemas/oic.types-schema.json#/definitions/uuid"
        },
        "rowneruuid": {
          "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/core/schemas/oic.types-schema.json#/definitions/uuid"
        }
      }
    }
  },
  "type": "object",
  "allOf": [
    { "$ref": "https://openconnectivityfoundation.github.io/ocf-apis/core/schemas/oic.core-schema.json#/definitions/oic.core" },
    { "$ref": "#/definitions/oic.r.doxm" }
  ],
  "required": [ "oxms", "oxmsel", "sct", "owned", "deviceuuid", "devowneruuid", "rowneruuid" ]
}
